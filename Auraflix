    <script>
        // Age verification functionality
        function handleAgeVerification(isOver18) {
            if (isOver18) {
                document.getElementById('ageVerification').classList.add('hidden');
                // Set cookie to remember age verification for 30 days
                document.cookie = "age_verified=true; max-age=2592000; path=/";
            } else {
                window.location.href = "https://www.google.com";
            }
        }

        // Check if user has already verified age
        function checkAgeVerification() {
            const cookies = document.cookie.split(';');
            const ageVerified = cookies.some(cookie => 
                cookie.trim().startsWith('age_verified=true')
            );
            if (ageVerified) {
                document.getElementById('ageVerification').classList.add('hidden');
            }
        }

        // Initialize age verification check on page load
        document.addEventListener('DOMContentLoaded', function() {
            checkAgeVerification();
        });
    </script>
